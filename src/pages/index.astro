---
import Layout from "../layouts/Layout.astro";
import Heading from "../components/ui/Heading.astro";
import Button from "../components/ui/Button.astro";
import Card from "../components/ui/Card.astro";
---

<Layout title="Action Amplifier">
    <div
        class="flex flex-col items-center justify-center min-h-screen p-4 md:p-8"
    >
        <div class="max-w-4xl mx-auto text-center space-y-8">
            <div class="space-y-4">
                <Heading level={1}> Action Amplifier </Heading>
                <p class="text-xl md:text-2xl text-text-muted">
                    Focus on what matters most
                </p>
            </div>

            <div class="flex justify-center gap-4">
                <Button href="/inbox" size="lg"> Open App </Button>
                <Button href="/faq" variant="secondary" size="lg">
                    Read FAQ
                </Button>
            </div>

            <Card class="mt-16 text-left p-6 md:p-8 bg-surface/50">
                <Heading level={2} class="mb-4">Features</Heading>
                <ul class="list-disc list-inside space-y-2 text-text-muted">
                    <li>Local-first data storage</li>
                    <li>GTD-inspired workflow</li>
                    <li>Text-based file format</li>
                    <li>Fast and focused interface</li>
                </ul>
            </Card>
        </div>
    </div>
</Layout>

            </div>
        
    </div>
</section>
  

        <!-- Spacing -->
        
<section>
    <Heading level={2}>Spacing</Heading>
    <p class="text-text-muted mb-4">Spacing scale based on a 4px (0.25rem) base unit.</p>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        
    </div>
</section>
  

        <!-- Border Radius -->
        
<section>
    <Heading level={2}>Border Radius</Heading>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        

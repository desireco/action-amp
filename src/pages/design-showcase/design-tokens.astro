                <div class="font-mono font-semibold">primary-foreground</div>
                <div class="text-text-muted font-mono text-xs">#ffffff</div>
            </div>
        </div>
      
        <div class="space-y-1">
            <div class="h-20 rounded-lg border border-border" style="background-color: #27272a"></div>
            <div class="text-sm">
                <div class="font-mono font-semibold">secondary</div>
                <div class="text-text-muted font-mono text-xs">#27272a</div>
            </div>
        </div>
      
        <div class="space-y-1">
            <div class="h-20 rounded-lg border border-border" style="background-color: #fafafa"></div>
            <div class="text-sm">
                <div class="font-mono font-semibold">secondary-foreground</div>
                <div class="text-text-muted font-mono text-xs">#fafafa</div>
            </div>
        </div>
      
        <div class="space-y-1">

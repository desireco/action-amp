---
import AppLayout from "../../layouts/AppLayout.astro";
import badge from "../../components/ui/components/.tsx/badge";
import Heading from "../../components/ui/Heading.astro";
import CodeBlock from "../../components/ui/CodeBlock.astro";

const title = "badge Component | Design System";
---

<AppLayout title={title} currentPath="/design-showcase/components/badge">
    <div class="max-w-6xl mx-auto space-y-8">
        <!-- Header -->
        <div class="space-y-4">
            <div class="flex items-center gap-2 text-sm text-text-muted">
                <span class="px-2 py-1 bg-primary/10 rounded">feedback</span>
                <span>â€¢</span>
                <span>/components/ui/badge.tsx</span>
            </div>
            <Heading level={1}>badge</Heading>
            <p class="text-lg text-text-muted">
                Small label or status indicator.
            </p>
        </div>

        <!-- Live Preview -->
        <section>
            <Heading level={2}>Live Preview</Heading>
            <div class="bg-surface rounded-lg p-8 border border-border">
                <badge />
            </div>
        </section>

        <!-- Props -->
        

        <!-- Variants -->
        
<section>
    <Heading level={2}>Variants</Heading>
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">

        <div class="p-4 bg-surface rounded border border-border">
            <badge variant="variant" />
            <p class="text-xs text-text-muted mt-2 font-mono">variant="variant"</p>
        </div>
      
        <div class="p-4 bg-surface rounded border border-border">
            <badge variant="{
  className,
  variant,
  asChild = false,
  ...props
}: React.ComponentProps<span> &
  VariantProps<typeof badgeVariants> & { asChild?: boolean }" />
            <p class="text-xs text-text-muted mt-2 font-mono">variant="{
  className,
  variant,
  asChild = false,
  ...props
}: React.ComponentProps<span> &
  VariantProps<typeof badgeVariants> & { asChild?: boolean }"</p>
        </div>
      
    </div>
</section>
  

        <!-- States -->
        

        <!-- Usage Examples -->
        <section>
            <Heading level={2}>Usage Examples</Heading>
            
<div class="space-y-6">
    <div>
        <h3 class="text-sm font-semibold mb-2">Basic Usage</h3>
        <pre class="bg-surface p-4 rounded-lg overflow-x-auto text-sm"><code>&lt;badge /&gt;</code></pre>
    </div>
    
</div>
  
        </section>

        <!-- Accessibility -->
        <section>
            <Heading level={2}>Accessibility</Heading>
            
<div class="space-y-4">
    <div class="grid grid-cols-2 gap-4">
        <div class="p-4 bg-surface rounded border border-border">
            <h4 class="font-semibold mb-2">Keyboard Support</h4>
            <p class="text-sm text-text-muted">
                Limited keyboard support
            </p>
        </div>
        <div class="p-4 bg-surface rounded border border-border">
            <h4 class="font-semibold mb-2">Screen Reader</h4>
            <p class="text-sm text-text-muted">
                Support unknown
            </p>
        </div>
    </div>
    
    <div>
        <h4 class="font-semibold mb-2">ARIA Attributes</h4>
        <div class="flex flex-wrap gap-2">
            <code class="px-2 py-1 bg-surface rounded text-sm">aria-invalid</code>
        </div>
    </div>
    
</div>
  
        </section>

        <!-- Related Components -->
        <section>
            <Heading level={2}>Related Components</Heading>
            
<p class="text-text-muted">
    No specific related components identified yet.
</p>
  
        </section>
    </div>
</AppLayout>

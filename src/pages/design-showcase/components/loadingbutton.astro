---
import AppLayout from "../../layouts/AppLayout.astro";
import LoadingButton from "../../components/ui/components/.astro/LoadingButton";
import Heading from "../../components/ui/Heading.astro";
import CodeBlock from "../../components/ui/CodeBlock.astro";

const title = "LoadingButton Component | Design System";
---

<AppLayout title={title} currentPath="/design-showcase/components/loadingbutton">
    <div class="max-w-6xl mx-auto space-y-8">
        <!-- Header -->
        <div class="space-y-4">
            <div class="flex items-center gap-2 text-sm text-text-muted">
                <span class="px-2 py-1 bg-primary/10 rounded">form</span>
                <span>•</span>
                <span>/components/ui/LoadingButton.astro</span>
            </div>
            <Heading level={1}>LoadingButton</Heading>
            <p class="text-lg text-text-muted">
                Interactive button component with multiple variants and sizes.
            </p>
        </div>

        <!-- Live Preview -->
        <section>
            <Heading level={2}>Live Preview</Heading>
            <div class="bg-surface rounded-lg p-8 border border-border">
                <LoadingButton variant="default">
    Click me
</LoadingButton>
<LoadingButton variant="outline">
    Cancel
</LoadingButton>
<LoadingButton variant="ghost" size="sm">
    Small
</LoadingButton>
            </div>
        </section>

        <!-- Props -->
        
<section>
    <Heading level={2}>Props</Heading>
    <div class="overflow-x-auto">
        <table class="w-full border-collapse">
            <thead>
                <tr class="border-b border-border">
                    <th class="px-4 py-2 text-left text-sm font-semibold">Name</th>
                    <th class="px-4 py-2 text-left text-sm font-semibold">Type</th>
                    <th class="px-4 py-2 text-center text-sm font-semibold">Required</th>
                    <th class="px-4 py-2 text-left text-sm font-semibold">Default</th>
                    <th class="px-4 py-2 text-left text-sm font-semibold">Description</th>
                </tr>
            </thead>
            <tbody>

        <tr>
            <td class="px-4 py-2 font-mono text-sm">loading?</td>
            <td class="px-4 py-2 font-mono text-sm text-text-muted">boolean</td>
            <td class="px-4 py-2 text-center">—</td>
            <td class="px-4 py-2 font-mono text-sm">—</td>
            <td class="px-4 py-2 text-sm">—</td>
        </tr>
      
        <tr>
            <td class="px-4 py-2 font-mono text-sm">loadingText?</td>
            <td class="px-4 py-2 font-mono text-sm text-text-muted">string</td>
            <td class="px-4 py-2 text-center">—</td>
            <td class="px-4 py-2 font-mono text-sm">—</td>
            <td class="px-4 py-2 text-sm">—</td>
        </tr>
      
        <tr>
            <td class="px-4 py-2 font-mono text-sm">children</td>
            <td class="px-4 py-2 font-mono text-sm text-text-muted">any</td>
            <td class="px-4 py-2 text-center">✓</td>
            <td class="px-4 py-2 font-mono text-sm">—</td>
            <td class="px-4 py-2 text-sm">—</td>
        </tr>
      
        <tr>
            <td class="px-4 py-2 font-mono text-sm">variant?</td>
            <td class="px-4 py-2 font-mono text-sm text-text-muted">"primary" | "secondary" | "ghost" | "destructive"</td>
            <td class="px-4 py-2 text-center">—</td>
            <td class="px-4 py-2 font-mono text-sm">—</td>
            <td class="px-4 py-2 text-sm">—</td>
        </tr>
      
        <tr>
            <td class="px-4 py-2 font-mono text-sm">size?</td>
            <td class="px-4 py-2 font-mono text-sm text-text-muted">"sm" | "md" | "lg"</td>
            <td class="px-4 py-2 text-center">—</td>
            <td class="px-4 py-2 font-mono text-sm">—</td>
            <td class="px-4 py-2 text-sm">—</td>
        </tr>
      
        <tr>
            <td class="px-4 py-2 font-mono text-sm">class?</td>
            <td class="px-4 py-2 font-mono text-sm text-text-muted">string</td>
            <td class="px-4 py-2 text-center">—</td>
            <td class="px-4 py-2 font-mono text-sm">—</td>
            <td class="px-4 py-2 text-sm">—</td>
        </tr>
      
        <tr>
            <td class="px-4 py-2 font-mono text-sm">type?</td>
            <td class="px-4 py-2 font-mono text-sm text-text-muted">"button" | "submit" | "reset"</td>
            <td class="px-4 py-2 text-center">—</td>
            <td class="px-4 py-2 font-mono text-sm">—</td>
            <td class="px-4 py-2 text-sm">—</td>
        </tr>
      
        <tr>
            <td class="px-4 py-2 font-mono text-sm">disabled?</td>
            <td class="px-4 py-2 font-mono text-sm text-text-muted">boolean</td>
            <td class="px-4 py-2 text-center">—</td>
            <td class="px-4 py-2 font-mono text-sm">—</td>
            <td class="px-4 py-2 text-sm">—</td>
        </tr>
      
        <tr>
            <td class="px-4 py-2 font-mono text-sm">href?</td>
            <td class="px-4 py-2 font-mono text-sm text-text-muted">string</td>
            <td class="px-4 py-2 text-center">—</td>
            <td class="px-4 py-2 font-mono text-sm">—</td>
            <td class="px-4 py-2 text-sm">—</td>
        </tr>
      
        <tr>
            <td class="px-4 py-2 font-mono text-sm">key</td>
            <td class="px-4 py-2 font-mono text-sm text-text-muted">string]: any</td>
            <td class="px-4 py-2 text-center">✓</td>
            <td class="px-4 py-2 font-mono text-sm">—</td>
            <td class="px-4 py-2 text-sm">—</td>
        </tr>
      
            </tbody>
        </table>
    </div>
</section>
  

        <!-- Variants -->
        
<section>
    <Heading level={2}>Variants</Heading>
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">

        <div class="p-4 bg-surface rounded border border-border">
            <LoadingButton variant="<a
      href={href}
      class={`inline-flex items-center justify-center gap-2 px-4 py-2 min-h-[44px] rounded-lg transition-colors disabled:opacity-50 disabled:cursor-not-allowed loading-btn ${variantClasses} ${className}`}
      aria-disabled={loading" />
            <p class="text-xs text-text-muted mt-2 font-mono">variant="<a
      href={href}
      class={`inline-flex items-center justify-center gap-2 px-4 py-2 min-h-[44px] rounded-lg transition-colors disabled:opacity-50 disabled:cursor-not-allowed loading-btn ${variantClasses} ${className}`}
      aria-disabled={loading"</p>
        </div>
      
        <div class="p-4 bg-surface rounded border border-border">
            <LoadingButton variant="" />
            <p class="text-xs text-text-muted mt-2 font-mono">variant=""</p>
        </div>
      
        <div class="p-4 bg-surface rounded border border-border">
            <LoadingButton variant="disabled}
      data-loading-text={loadingText}
    >
      <span class=loading-spinner hidden>
        <Spinner size=sm />
      </span>
      <span class=loading-text>
        <slot />
      </span>
    </a>" />
            <p class="text-xs text-text-muted mt-2 font-mono">variant="disabled}
      data-loading-text={loadingText}
    >
      <span class=loading-spinner hidden>
        <Spinner size=sm />
      </span>
      <span class=loading-text>
        <slot />
      </span>
    </a>"</p>
        </div>
      
    </div>
</section>
  

        <!-- States -->
        

        <!-- Usage Examples -->
        <section>
            <Heading level={2}>Usage Examples</Heading>
            
<div class="space-y-6">
    <div>
        <h3 class="text-sm font-semibold mb-2">Basic Usage</h3>
        <pre class="bg-surface p-4 rounded-lg overflow-x-auto text-sm"><code>&lt;LoadingButton /&gt;</code></pre>
    </div>
    
    <div>
        <h3 class="text-sm font-semibold mb-2">With Custom Styling</h3>
        <pre class="bg-surface p-4 rounded-lg overflow-x-auto text-sm"><code>&lt;LoadingButton
    variant="default"
    size="lg"
    class="w-full"
    disabled={false}
&gt;
    Click Me
&lt;/LoadingButton&gt;</code></pre>
    </div>
    
</div>
  
        </section>

        <!-- Accessibility -->
        <section>
            <Heading level={2}>Accessibility</Heading>
            
<div class="space-y-4">
    <div class="grid grid-cols-2 gap-4">
        <div class="p-4 bg-surface rounded border border-border">
            <h4 class="font-semibold mb-2">Keyboard Support</h4>
            <p class="text-sm text-text-muted">
                Limited keyboard support
            </p>
        </div>
        <div class="p-4 bg-surface rounded border border-border">
            <h4 class="font-semibold mb-2">Screen Reader</h4>
            <p class="text-sm text-text-muted">
                Support unknown
            </p>
        </div>
    </div>
    
    <div>
        <h4 class="font-semibold mb-2">ARIA Attributes</h4>
        <div class="flex flex-wrap gap-2">
            <code class="px-2 py-1 bg-surface rounded text-sm">aria-disabled</code>
        </div>
    </div>
    
</div>
  
        </section>

        <!-- Related Components -->
        <section>
            <Heading level={2}>Related Components</Heading>
            
<p class="text-text-muted">
    No specific related components identified yet.
</p>
  
        </section>
    </div>
</AppLayout>

---
import AppLayout from "../../layouts/AppLayout.astro";
import Heading from "../../components/ui/Heading.astro";
import Card from "../../components/ui/Card.astro";
import Button from "../../components/ui/Button.astro";
import Input from "../../components/ui/Input.astro";
import FileText from "~icons/lucide/file-text";
import Layout from "~icons/lucide/layout";
import Users from "~icons/lucide/users";
import BarChart from "~icons/lucide/bar-chart";
import Settings from "~icons/lucide/settings";
import Plus from "~icons/lucide/plus";
import Search from "~icons/lucide/search";
import Filter from "~icons/lucide/filter";
import ArrowRight from "~icons/lucide/arrow-right";

const title = "Templates | Design Showcase";
---

<AppLayout title={title} currentPath="/design-showcase/templates">
    <div class="max-w-6xl mx-auto space-y-8">
        <Heading level={1} class="flex items-center gap-3">
            <FileText class="h-8 w-8 text-primary" />
            Page Templates
        </Heading>

        <p class="text-lg text-text-muted">
            Reusable page layouts and templates that maintain consistency across ActionAmp.
        </p>

        <!-- Dashboard Template -->
        <section>
            <Heading level={2}>Dashboard Layout</Heading>

            <Card class="overflow-hidden">
                <div class="p-6 border-b border-border">
                    <h3 class="font-semibold mb-2">Dashboard Template</h3>
                    <p class="text-sm text-text-muted">
                        Multi-column layout with stats, charts, and quick actions.
                    </p>
                </div>

                <!-- Template Preview -->
                <div class="bg-surface p-6">
                    <!-- Header -->
                    <div class="flex justify-between items-center mb-6">
                        <div>
                            <h4 class="text-xl font-semibold">Dashboard Overview</h4>
                            <p class="text-sm text-text-muted">Welcome back, John</p>
                        </div>
                        <Button class="flex items-center gap-2">
                            <Plus class="h-4 w-4" />
                            New Project
                        </Button>
                    </div>

                    <!-- Stats Grid -->
                    <div class="grid gap-4 md:grid-cols-2 lg:grid-cols-4 mb-6">
                        <div class="bg-background p-4 rounded-lg border border-border">
                            <div class="flex items-center justify-between mb-2">
                                <span class="text-sm text-text-muted">Total Projects</span>
                                <div class="w-8 h-8 bg-primary/20 rounded flex items-center justify-center">
                                    <Layout class="h-4 w-4 text-primary" />
                                </div>
                            </div>
                            <p class="text-2xl font-semibold">24</p>
                            <p class="text-xs text-text-muted">+3 this week</p>
                        </div>

                        <div class="bg-background p-4 rounded-lg border border-border">
                            <div class="flex items-center justify-between mb-2">
                                <span class="text-sm text-text-muted">Active Tasks</span>
                                <div class="w-8 h-8 bg-green-500/20 rounded flex items-center justify-center">
                                    <ArrowRight class="h-4 w-4 text-green-500" />
                                </div>
                            </div>
                            <p class="text-2xl font-semibold">142</p>
                            <p class="text-xs text-text-muted">12 due today</p>
                        </div>

                        <div class="bg-background p-4 rounded-lg border border-border">
                            <div class="flex items-center justify-between mb-2">
                                <span class="text-sm text-text-muted">Team Members</span>
                                <div class="w-8 h-8 bg-blue-500/20 rounded flex items-center justify-center">
                                    <Users class="h-4 w-4 text-blue-500" />
                                </div>
                            </div>
                            <p class="text-2xl font-semibold">8</p>
                            <p class="text-xs text-text-muted">2 online now</p>
                        </div>

                        <div class="bg-background p-4 rounded-lg border border-border">
                            <div class="flex items-center justify-between mb-2">
                                <span class="text-sm text-text-muted">Completion Rate</span>
                                <div class="w-8 h-8 bg-purple-500/20 rounded flex items-center justify-center">
                                    <BarChart class="h-4 w-4 text-purple-500" />
                                </div>
                            </div>
                            <p class="text-2xl font-semibold">87%</p>
                            <p class="text-xs text-text-muted">+5% this month</p>
                        </div>
                    </div>

                    <!-- Main Content Grid -->
                    <div class="grid gap-6 lg:grid-cols-3">
                        <!-- Recent Activity -->
                        <div class="lg:col-span-2">
                            <h5 class="font-semibold mb-3">Recent Activity</h5>
                            <div class="space-y-3">
                                <div class="bg-background p-3 rounded-lg border border-border">
                                    <div class="flex items-start gap-3">
                                        <div class="w-2 h-2 bg-primary rounded-full mt-2"></div>
                                        <div class="flex-1">
                                            <p class="text-sm">New task "Review Q4 reports" created</p>
                                            <p class="text-xs text-text-muted">2 minutes ago</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="bg-background p-3 rounded-lg border border-border">
                                    <div class="flex items-start gap-3">
                                        <div class="w-2 h-2 bg-green-500 rounded-full mt-2"></div>
                                        <div class="flex-1">
                                            <p class="text-sm">Project Alpha completed</p>
                                            <p class="text-xs text-text-muted">1 hour ago</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="bg-background p-3 rounded-lg border border-border">
                                    <div class="flex items-start gap-3">
                                        <div class="w-2 h-2 bg-blue-500 rounded-full mt-2"></div>
                                        <div class="flex-1">
                                            <p class="text-sm">Sarah joined the team</p>
                                            <p class="text-xs text-text-muted">3 hours ago</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Quick Actions -->
                        <div>
                            <h5 class="font-semibold mb-3">Quick Actions</h5>
                            <div class="space-y-2">
                                <Button variant="outline" class="w-full justify-start">
                                    Create New Project
                                </Button>
                                <Button variant="outline" class="w-full justify-start">
                                    Invite Team Member
                                </Button>
                                <Button variant="outline" class="w-full justify-start">
                                    View Reports
                                </Button>
                            </div>
                        </div>
                    </div>
                </div>
            </Card>
        </section>

        <!-- List View Template -->
        <section>
            <Heading level={2}>List View Layout</Heading>

            <Card class="overflow-hidden">
                <div class="p-6 border-b border-border">
                    <h3 class="font-semibold mb-2">List View Template</h3>
                    <p class="text-sm text-text-muted">
                        Clean, scannable layout for managing multiple items.
                    </p>
                </div>

                <div class="bg-surface p-6">
                    <!-- Header with Search -->
                    <div class="flex flex-col sm:flex-row gap-3 mb-6">
                        <div class="relative flex-1">
                            <Search class="absolute left-3 top-1/2 transform -translate-y-1/2 h-4 w-4 text-text-muted" />
                            <Input placeholder="Search items..." class="pl-10" />
                        </div>
                        <div class="flex gap-2">
                            <Button variant="outline" class="flex items-center gap-2">
                                <Filter class="h-4 w-4" />
                                Filter
                            </Button>
                            <Button class="flex items-center gap-2">
                                <Plus class="h-4 w-4" />
                                Add Item
                            </Button>
                        </div>
                    </div>

                    <!-- List Items -->
                    <div class="space-y-2">
                        <div class="bg-background border border-border rounded-lg p-4 hover:bg-surface-hover transition-colors">
                            <div class="flex items-center justify-between">
                                <div class="flex items-center gap-3">
                                    <input type="checkbox" class="rounded" />
                                    <div>
                                        <h6 class="font-medium">Project Alpha Development</h6>
                                        <p class="text-sm text-text-muted">Due on Dec 15, 2023</p>
                                    </div>
                                </div>
                                <div class="flex items-center gap-3">
                                    <span class="inline-flex items-center px-2.5 py-0.5 text-xs font-medium rounded-full bg-green-500 text-white">
                                    Active
                                </span>
                                    <Button variant="ghost" size="sm">
                                        <Settings class="h-4 w-4" />
                                    </Button>
                                </div>
                            </div>
                        </div>

                        <div class="bg-background border border-border rounded-lg p-4 hover:bg-surface-hover transition-colors">
                            <div class="flex items-center justify-between">
                                <div class="flex items-center gap-3">
                                    <input type="checkbox" class="rounded" />
                                    <div>
                                        <h6 class="font-medium">Marketing Campaign Q1</h6>
                                        <p class="text-sm text-text-muted">Due on Jan 10, 2024</p>
                                    </div>
                                </div>
                                <div class="flex items-center gap-3">
                                    <span class="inline-flex items-center px-2.5 py-0.5 text-xs font-medium rounded-full bg-yellow-500 text-black">
                                    Review
                                </span>
                                    <Button variant="ghost" size="sm">
                                        <Settings class="h-4 w-4" />
                                    </Button>
                                </div>
                            </div>
                        </div>

                        <div class="bg-background border border-border rounded-lg p-4 hover:bg-surface-hover transition-colors">
                            <div class="flex items-center justify-between">
                                <div class="flex items-center gap-3">
                                    <input type="checkbox" class="rounded" />
                                    <div>
                                        <h6 class="font-medium">Website Redesign</h6>
                                        <p class="text-sm text-text-muted">Due on Feb 1, 2024</p>
                                    </div>
                                </div>
                                <div class="flex items-center gap-3">
                                    <span class="inline-flex items-center px-2.5 py-0.5 text-xs font-medium rounded-full bg-secondary text-secondary-foreground">
                                Planning
                            </span>
                                    <Button variant="ghost" size="sm">
                                        <Settings class="h-4 w-4" />
                                    </Button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </Card>
        </section>

        <!-- Form Template -->
        <section>
            <Heading level={2}>Form Layout</Heading>

            <Card class="overflow-hidden">
                <div class="p-6 border-b border-border">
                    <h3 class="font-semibold mb-2">Form Template</h3>
                    <p class="text-sm text-text-muted">
                        Consistent layout for data entry and configuration.
                    </p>
                </div>

                <div class="bg-surface p-6">
                    <form class="max-w-2xl">
                        <div class="space-y-6">
                            <!-- Basic Information Section -->
                            <div>
                                <h5 class="font-semibold mb-4">Basic Information</h5>
                                <div class="grid gap-4 md:grid-cols-2">
                                    <div>
                                        <label class="block text-sm font-medium mb-1">Project Name</label>
                                        <Input placeholder="Enter project name" />
                                    </div>
                                    <div>
                                        <label class="block text-sm font-medium mb-1">Client</label>
                                        <Input placeholder="Enter client name" />
                                    </div>
                                </div>
                                <div class="mt-4">
                                    <label class="block text-sm font-medium mb-1">Description</label>
                                    <textarea class="w-full px-3 py-2 bg-background border border-border rounded-lg" rows={3} placeholder="Project description"></textarea>
                                </div>
                            </div>

                            <!-- Configuration Section -->
                            <div>
                                <h5 class="font-semibold mb-4">Configuration</h5>
                                <div class="space-y-4">
                                    <div>
                                        <label class="block text-sm font-medium mb-1">Priority</label>
                                        <select class="w-full px-3 py-2 bg-background border border-border rounded-lg">
                                            <option>Low</option>
                                            <option>Medium</option>
                                            <option>High</option>
                                            <option>Critical</option>
                                        </select>
                                    </div>
                                    <div>
                                        <label class="block text-sm font-medium mb-1">Tags</label>
                                        <Input placeholder="Enter tags separated by commas" />
                                    </div>
                                </div>
                            </div>

                            <!-- Team Section -->
                            <div>
                                <h5 class="font-semibold mb-4">Team Members</h5>
                                <div class="space-y-3">
                                    <div class="flex items-center gap-3 p-3 bg-background border border-border rounded-lg">
                                        <div class="w-8 h-8 bg-primary/20 rounded-full flex items-center justify-center">
                                            <span class="text-sm font-medium">JD</span>
                                        </div>
                                        <div class="flex-1">
                                            <p class="font-medium">John Doe</p>
                                            <p class="text-sm text-text-muted">Project Manager</p>
                                        </div>
                                        <Button variant="ghost" size="sm">Remove</Button>
                                    </div>
                                </div>
                                <Button variant="outline" class="mt-3">Add Team Member</Button>
                            </div>
                        </div>

                        <!-- Form Actions -->
                        <div class="flex justify-between mt-8 pt-6 border-t border-border">
                            <Button variant="outline">Cancel</Button>
                            <div class="flex gap-2">
                                <Button variant="ghost">Save Draft</Button>
                                <Button>Create Project</Button>
                            </div>
                        </div>
                    </form>
                </div>
            </Card>
        </section>

        <!-- Empty State Template -->
        <section>
            <Heading level={2}>Empty State Layout</Heading>

            <Card class="overflow-hidden">
                <div class="p-6 border-b border-border">
                    <h3 class="font-semibold mb-2">Empty State Template</h3>
                    <p class="text-sm text-text-muted">
                        Guiding users when no content is available.
                    </p>
                </div>

                <div class="bg-surface p-12 text-center">
                    <div class="w-16 h-16 bg-surface-hover rounded-full flex items-center justify-center mx-auto mb-4">
                        <FileText class="h-8 w-8 text-text-muted" />
                    </div>
                    <h4 class="text-xl font-semibold mb-2">No Projects Yet</h4>
                    <p class="text-text-muted mb-6 max-w-md mx-auto">
                        Get started by creating your first project. Projects help you organize tasks and collaborate with your team.
                    </p>
                    <div class="flex justify-center gap-3">
                        <Button class="flex items-center gap-2">
                            <Plus class="h-4 w-4" />
                            Create Project
                        </Button>
                        <Button variant="outline">Learn More</Button>
                    </div>
                </div>
            </Card>
        </section>

        <!-- Usage Guidelines -->
        <section>
            <Heading level={2}>Template Usage Guidelines</Heading>

            <div class="grid gap-6 md:grid-cols-2">
                <Card class="p-6">
                    <h3 class="font-semibold mb-3">When to Use Templates</h3>
                    <ul class="space-y-2 text-sm text-text-muted">
                        <li>• New pages should start from appropriate template</li>
                        <li>• Maintain consistency with template structure</li>
                        <li>• Customize content, not layout patterns</li>
                        <li>• Follow spacing and component guidelines</li>
                        <li>• Keep responsive design intact</li>
                    </ul>
                </Card>

                <Card class="p-6">
                    <h3 class="font-semibold mb-3">Customization Rules</h3>
                    <ul class="space-y-2 text-sm text-text-muted">
                        <li>• Modify colors using design tokens only</li>
                        <li>• Don't change core spacing patterns</li>
                        <li>• Keep component hierarchy consistent</li>
                        <li>• Maintain accessibility features</li>
                        <li>• Test across all viewport sizes</li>
                    </ul>
                </Card>
            </div>
        </section>
    </div>
</AppLayout>
---
import AppLayout from "../../layouts/AppLayout.astro";
import { getEntry, getCollection, render } from "astro:content";
import {
    ArrowLeft,
    Calendar,
    FolderInput,
    Trash2,
    Link,
    Lightbulb,
    FileText,
    CheckSquare,
    BookOpen,
    Inbox as InboxIcon,
} from "lucide-astro";
import fs from "node:fs/promises";
import path from "node:path";
import matter from "gray-matter";
import { marked } from "marked";
import Heading from "../../components/ui/Heading.astro";
import Card from "../../components/ui/Card.astro";
import Button from "../../components/ui/Button.astro";
import Input from "../../components/ui/Input.astro";

const { id } = Astro.params;

if (!id) {
    return Astro.redirect("/inbox");
}

let item: any;
let Content: any;
let htmlContent = "";

// Try to get from Content Collection first (fastest, pre-built)
const collectionItem = await getEntry("inbox", id);

if (collectionItem) {
    item = collectionItem;
    const rendered = await render(collectionItem);
    Content = rendered.Content;
} else {
    // Fallback: Read directly from disk (for dynamic items)
    try {
        const filePath = path.join(process.cwd(), "data/inbox", `${id}.md`);

        const fileContent = await fs.readFile(filePath, "utf-8");

        const parsed = matter(fileContent);

        item = {
            id,
            data: {
                ...parsed.data,
                // Ensure dates are Date objects
                captured: parsed.data.captured
                    ? new Date(parsed.data.captured)
                    : new Date(),
            },
            body: parsed.content,
        };

        htmlContent = await marked.parse(parsed.content);
    } catch (e: any) {
        console.error(`Failed to read inbox item ${id}:`, e);
        return new Response(`Error loading item: ${e.message}`, {
            status: 500,
        });
    }
}

const projects = await getCollection("projects");
const activeProjects = projects.filter((p) => p.data.status === "active");

const typeIcons = {
    action: CheckSquare,
    note: FileText,
    link: Link,
    idea: Lightbulb,
    resource: BookOpen,
};
---

<AppLayout title={`${item?.data?.title} | Inbox`}>
    <div class="max-w-3xl mx-auto space-y-6">
        <div>
            <Button
                href="/inbox"
                variant="ghost"
                class="pl-0 hover:pl-2 transition-all"
            >
                <ArrowLeft class="h-4 w-4 mr-2" />
                Back to Inbox
            </Button>
        </div>

        <div class="grid gap-8">
            <Card class="overflow-hidden">
                <div class="p-4 md:p-8 border-b border-border">
                    <div class="flex items-center gap-3 mb-4">
                        <span
                            class={`px-2.5 py-1 rounded-md text-xs font-medium uppercase tracking-wider flex items-center gap-1 ${
                                item?.data?.type
                                    ? "bg-primary/10 text-primary"
                                    : "bg-surface-hover text-text-muted"
                            }`}
                        >
                            {
                                (() => {
                                    const Icon =
                                        typeIcons[
                                            item?.data
                                                ?.type as keyof typeof typeIcons
                                        ] || InboxIcon;
                                    return <Icon class="h-3.5 w-3.5" />;
                                })()
                            }
                            {item?.data?.type || "Unsorted"}
                        </span>
                        <div class="flex items-center text-text-muted text-sm">
                            <Calendar class="h-4 w-4 mr-1.5" />
                            {
                                item.data.captured instanceof Date &&
                                !isNaN(item.data.captured.getTime())
                                    ? item.data.captured
                                          .toISOString()
                                          .replace("T", " ")
                                          .substring(0, 16)
                                    : "Invalid Date"
                            }
                        </div>
                    </div>

                    <Heading level={1} class="leading-tight">
                        {item?.data?.title}
                    </Heading>
                </div>

                <div
                    class="p-4 md:p-8 prose prose-invert prose-lg max-w-none text-text-muted"
                >
                    {Content ? <Content /> : <div set:html={htmlContent} />}
                </div>
            </Card>

            <Card class="p-6">
                <Heading level={2} class="text-lg mb-4 flex items-center gap-2">
                    <FolderInput class="h-5 w-5 text-primary" />
                    Process Item
                </Heading>

                <form id="process-form" class="space-y-4">
                    <input type="hidden" name="inboxItemId" value={item.id} />

                    <div>
                        <label
                            for="project"
                            class="block text-sm font-medium text-text-muted mb-1"
                        >
                            Move to Project
                        </label>
                        <select
                            id="project"
                            name="projectId"
                            class="flex h-10 w-full rounded-lg border border-border bg-surface px-3 py-2 text-sm text-text-main ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-text-muted focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-primary focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50"
                            required
                        >
                            <option value="" disabled selected
                                >Select a project...</option
                            >
                            {
                                activeProjects.map((project) => (
                                    <option value={project.id}>
                                        {project.data.name} ({project.data.area}
                                        )
                                    </option>
                                ))
                            }
                        </select>
                    </div>

                    <div class="flex items-center gap-3 pt-2">
                        <Button type="submit" class="flex-1 gap-2">
                            <FolderInput class="h-4 w-4" />
                            Convert to Action
                        </Button>
                        <Button
                            type="button"
                            variant="destructive"
                            size="icon"
                            id="delete-button"
                            title="Delete"
                        >
                            <Trash2 class="h-4 w-4" />
                        </Button>
                    </div>
                </form>
            </Card>
        </div>
    </div>
</AppLayout>

<script>
    const form = document.getElementById("process-form") as HTMLFormElement;
    const deleteBtn = document.getElementById("delete-button") as HTMLButtonElement;

    form?.addEventListener("submit", async (e) => {
        e.preventDefault();
        const formData = new FormData(form);
        const inboxItemId = formData.get("inboxItemId");
        const projectId = formData.get("projectId");

        if (!inboxItemId || !projectId) return;

        const submitBtn = form.querySelector(
            'button[type="submit"]',
        ) as HTMLButtonElement;
        const originalText = submitBtn.innerHTML;
        submitBtn.disabled = true;
        submitBtn.innerHTML = "Processing...";

        try {
            const res = await fetch("/api/actions/move", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ inboxItemId, projectId }),
            });

            if (res.ok) {
                window.location.href = "/inbox";
            } else {
                alert("Failed to move item");
                submitBtn.disabled = false;
                submitBtn.innerHTML = originalText;
            }
        } catch (err) {
            console.error(err);
            alert("Error moving item");
            submitBtn.disabled = false;
            submitBtn.innerHTML = originalText;
        }
    });

    deleteBtn?.addEventListener("click", async () => {
        const inboxItemIdInput = form.querySelector('[name="inboxItemId"]') as HTMLInputElement;
        const inboxItemId = inboxItemIdInput?.value;
        if (!inboxItemId) return;
        const ok = window.confirm("Delete this inbox item?");
        if (!ok) return;
        try {
            deleteBtn.disabled = true;
            const res = await fetch(`/api/inbox/${inboxItemId}`, { method: "DELETE" });
            if (res.ok) {
                window.location.href = "/inbox";
            } else {
                alert("Failed to delete item");
                deleteBtn.disabled = false;
            }
        } catch (err) {
            alert("Error deleting item");
            deleteBtn.disabled = false;
        }
    });
</script>

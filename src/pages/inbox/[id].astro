---
import AppLayout from "../../layouts/AppLayout.astro";
import { dataReader } from "../../lib/data/reader";
import ArrowLeft from "~icons/lucide/arrow-left";
import Calendar from "~icons/lucide/calendar";
import FolderInput from "~icons/lucide/folder-input";
import Trash2 from "~icons/lucide/trash-2";
import Link from "~icons/lucide/link";
import Lightbulb from "~icons/lucide/lightbulb";
import FileText from "~icons/lucide/file-text";
import CheckSquare from "~icons/lucide/check-square";
import BookOpen from "~icons/lucide/book-open";
import InboxIcon from "~icons/lucide/inbox";
import { marked } from "marked";
import fs from "node:fs/promises";
import Heading from "../../components/ui/Heading.astro";
import Card from "../../components/ui/Card.astro";
import Button from "../../components/ui/Button.astro";
import Input from "../../components/ui/Input.astro";

const { id } = Astro.params;
const { currentUser } = Astro.locals as any;

if (!id) {
    await fs.appendFile('debug-log.txt', `[InboxDetail] NO ID! User: ${currentUser}\n`);
    return Astro.redirect("/inbox");
}

// 1. Fetch item using dataReader
const inboxItems = await dataReader.getInboxItems(currentUser);
const item = inboxItems.find((i) => i.id === id);

await fs.appendFile('debug-log.txt', `[InboxDetail] Access ${id}. User: ${currentUser}. Found: ${!!item}\n`);

if (!item) {
    await fs.appendFile('debug-log.txt', `[InboxDetail] Item not found (REALLY)! Available: ${inboxItems.map(i => i.id).join(', ')}\n`);
    return Astro.redirect("/inbox");
}

const htmlContent = marked.parse(item.body || "");

// 2. Fetch Projects for the "Move" dropdown
const projects = await dataReader.getAllProjects(currentUser);
const activeProjects = projects.filter((p) => p.data.status === "active");

const typeIcons = {
    action: CheckSquare,
    note: FileText,
    link: Link,
    idea: Lightbulb,
    resource: BookOpen,
};
---

<AppLayout title={`Inbox Item`}>
    <div class="max-w-3xl mx-auto space-y-6">
        <div>
            <Button
                href="/inbox"
                variant="ghost"
                class="pl-0 hover:pl-2 transition-all"
            >
                <ArrowLeft class="h-4 w-4 mr-2" />
                Back to Inbox
            </Button>
        </div>

        <div class="grid gap-8">
            <Card class="overflow-hidden">
                <div class="p-4 md:p-8 border-b border-border">
                    <div class="flex items-center gap-3 mb-4">
                        <span
                            class={`px-2.5 py-1 rounded-md text-xs font-medium uppercase tracking-wider flex items-center gap-1 ${
                                item?.data?.type
                                    ? "bg-primary/10 text-primary"
                                    : "bg-surface-hover text-text-muted"
                            }`}
                        >
                            {
                                (() => {
                                    const Icon =
                                        typeIcons[
                                            item?.data
                                                ?.type as keyof typeof typeIcons
                                        ] || InboxIcon;
                                    return <Icon class="h-3.5 w-3.5" />;
                                })()
                            }
                            {item?.data?.type || "Unsorted"}
                        </span>
                        <div class="flex items-center text-text-muted text-sm">
                            <Calendar class="h-4 w-4 mr-1.5" />
                            {
                                item.data.captured instanceof Date &&
                                !isNaN(item.data.captured.getTime())
                                    ? item.data.captured
                                          .toISOString()
                                          .replace("T", " ")
                                          .substring(0, 16)
                                    : "Invalid Date"
                            }
                        </div>
                    </div>

                    <Heading level={1} class="leading-tight">{item?.data?.title}</Heading>
                </div>

                <div
                    class="p-4 md:p-8 prose prose-invert prose-lg max-w-none text-text-muted"
                >
                    {Content ? <Content /> : <div set:html={htmlContent} />}
                </div>
            </Card>

            <Card class="p-6">
                <Heading level={2} class="text-lg mb-4 flex items-center gap-2">
                    <FolderInput class="h-5 w-5 text-primary" />
                    Process Item
                </Heading>

                <form id="process-form" class="space-y-4">
                    <input type="hidden" name="inboxItemId" value={item.id} />

                    <div>
                        <label
                            for="project"
                            class="block text-sm font-medium text-text-muted mb-1"
                        >
                            Move to Project
                        </label>
                        <select
                            id="project"
                            name="projectId"
                            class="flex h-10 w-full rounded-lg border border-border bg-surface px-3 py-2 text-sm text-text-main ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-text-muted focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-primary focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50"
                            required
                        >
                            <option value="" disabled selected
                                >Select a project...</option
                            >
                            {
                                activeProjects.map((project) => (
                                    <option value={project.id}>
                                        {project.data.name} ({project.data.area}
                                        )
                                    </option>
                                ))
                            }
                        </select>
                    </div>

                    <div class="flex items-center gap-3 pt-2">
                        <Button type="submit" class="flex-1 gap-2">
                            <FolderInput class="h-4 w-4" />
                            Convert to Action
                        </Button>
                        <Button
                            type="button"
                            variant="destructive"
                            size="icon"
                            id="delete-button"
                            title="Delete"
                        >
                            <Trash2 class="h-4 w-4" />
                        </Button>
                    </div>
                </form>
            </Card>
        </div>
    </div>
</AppLayout>

<script>
    const form = document.getElementById("process-form") as HTMLFormElement;
    const deleteBtn = document.getElementById("delete-button") as HTMLButtonElement;

    form?.addEventListener("submit", async (e) => {
        e.preventDefault();
        const formData = new FormData(form);
        const inboxItemId = formData.get("inboxItemId");
        const projectId = formData.get("projectId");

        if (!inboxItemId || !projectId) return;

        const submitBtn = form.querySelector(
            'button[type="submit"]',
        ) as HTMLButtonElement;
        const originalText = submitBtn.innerHTML;
        submitBtn.disabled = true;
        submitBtn.innerHTML = "Processing...";

        try {
            const res = await fetch("/api/actions/move", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ inboxItemId, projectId }),
            });

            if (res.ok) {
                window.location.href = "/inbox";
            } else {
                alert("Failed to move item");
                submitBtn.disabled = false;
                submitBtn.innerHTML = originalText;
            }
        } catch (err) {
            console.error(err);
            alert("Error moving item");
            submitBtn.disabled = false;
            submitBtn.innerHTML = originalText;
        }
    });

    deleteBtn?.addEventListener("click", async () => {
        const inboxItemIdInput = form.querySelector('[name="inboxItemId"]') as HTMLInputElement;
        const inboxItemId = inboxItemIdInput?.value;
        if (!inboxItemId) return;
        const ok = window.confirm("Delete this inbox item?");
        if (!ok) return;
        try {
            deleteBtn.disabled = true;
            const res = await fetch(`/api/inbox/${inboxItemId}`, { method: "DELETE" });
            if (res.ok) {
                // Force a hard refresh with timestamp to bypass any cache
                window.location.href = "/inbox?t=" + Date.now();
            } else {
                alert("Failed to delete item");
                deleteBtn.disabled = false;
            }
        } catch (err) {
            alert("Error deleting item");
            deleteBtn.disabled = false;
        }
    });
</script>

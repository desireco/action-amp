---
import { Card as ShadcnCard, CardContent as ShadcnCardContent } from '@/components/ui/card';

interface Props {
    class?: string;
    [key: string]: any;
}

const { class: className = "", ...rest } = Astro.props;
---

<ShadcnCard client:idle class={className} {...rest}>
    <ShadcnCardContent class="p-0">
        <slot />
    </ShadcnCardContent>
</ShadcnCard>

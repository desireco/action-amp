---
import Layout from "./Layout.astro";
import Settings from "~icons/lucide/settings";
import Zap from "~icons/lucide/zap";
import Layers from "~icons/lucide/layers";
import { getContextData } from "../lib/context";
import { buildNavItems } from "../lib/navigation";
import Input from "../components/ui/Input.astro";

interface Props {
    title: string;
    currentPath?: string;
    hideSidebar?: boolean;
}

const { title, currentPath = Astro.url.pathname, hideSidebar = false } = Astro.props;

// Fetch Context and Projects from locals (set by global middleware)
const settings = (Astro.locals as any).settings;
const { currentContext, currentContextName, contextProjects } = getContextData(settings);
const navItems = buildNavItems(contextProjects);

const pathParts = currentPath.split("/");
const activeCache = new Map<string, boolean>();
const isActive = (path: string) => {
    const c = activeCache.get(path);
    if (c !== undefined) return c;
    let v = false;
    if (path === "/" && currentPath === "/") v = true;
    else if (path !== "/" && currentPath.startsWith(path)) v = true;
    activeCache.set(path, v);
    return v;
};
const isSubActive = (href: string) => {
    const key = `sub:${href}`;
    const c = activeCache.get(key);
    if (c !== undefined) return c;
    const v = currentPath === href || currentPath.startsWith(href + "/");
    activeCache.set(key, v);
    return v;
};
---

<Layout title={title}>
    <div
        class="flex flex-col md:flex-row min-h-[100dvh] bg-background"
    >
        <!-- Mobile Header -->
        <header
            class="md:hidden flex items-center justify-between p-4 border-b border-border bg-surface"
        >
            <div class="flex items-center gap-2">
                <div
                    class="h-8 w-8 rounded-lg bg-primary/20 flex items-center justify-center text-primary"
                >
                    <Zap class="h-5 w-5" />
                </div>
                <h1 class="text-lg font-bold tracking-tight text-text-main">
                    Action Amp
                </h1>
            </div>
            <a href="/settings" class="text-text-muted hover:text-text-main">
                <Settings class="h-5 w-5" />
            </a>
        </header>

        <!-- Sidebar -->
        { !hideSidebar && (
        <aside
            class="w-64 border-r border-border bg-surface hidden md:flex flex-col"
        >
            <a href="/inbox" class="p-6 flex items-center gap-3">
                <div
                    class="h-8 w-8 rounded-lg bg-primary/20 flex items-center justify-center text-primary"
                >
                    <Zap class="h-5 w-5" />
                </div>
                <h1 class="text-xl font-bold tracking-tight text-text-main">
                    Action Amp
                </h1>
            </a>

            <div class="px-4 mb-2">
                <form class="relative" action="/search" method="GET">
                    <Input
                        type="text"
                        id="nav-search"
                        name="q"
                        placeholder="Search..."
                        class="bg-surface-hover"
                    />
                    <div class="absolute right-3 top-2.5 text-xs text-text-muted pointer-events-none opacity-50">‚èé</div>
                </form>
            </div>

            <nav class="flex-1 px-4 space-y-1 mt-2 overflow-y-auto">
                {
                    navItems.map((item) => {
                        const active = isActive(item.href);
                        const hasSubitems =
                            item.subitems && item.subitems.length > 0;

                        return (
                            <div>
                                <a
                                    href={item.href}
                                    aria-current={active ? 'page' : undefined}
                                    class:list={[
                                        "flex items-center px-3 py-2.5 text-sm font-medium rounded-lg transition-all duration-200 group",
                                        active
                                            ? "bg-primary/10 text-primary"
                                            : "text-text-muted hover:bg-surface-hover hover:text-text-main",
                                    ]}
                                >
                                    <item.icon
                                        class:list={[
                                            "mr-3 h-5 w-5 transition-colors",
                                            active
                                                ? "text-primary"
                                                : "text-text-muted group-hover:text-text-main",
                                        ]}
                                    />
                                    <span class="flex-1">{item.name}</span>
                                    {hasSubitems && (
                                        <span class="text-xs bg-primary/10 text-primary px-2 py-0.5 rounded-full">
                                            {item.subitems.length}
                                        </span>
                                    )}
                                </a>

                                {active && hasSubitems && (
                                    <div class="ml-9 mt-1 space-y-1 border-l border-border pl-2">
                                        {item.subitems.map((sub) => {
                                            const subActive = isSubActive(sub.href);
                                            return (
                                                <a
                                                    href={sub.href}
                                                    aria-current={subActive ? 'page' : undefined}
                                                    class:list={[
                                                        "block px-3 py-1.5 text-sm rounded-md transition-colors truncate",
                                                        subActive
                                                            ? "text-primary bg-primary/5 font-medium"
                                                            : "text-text-muted hover:text-text-main hover:bg-surface-hover",
                                                    ]}
                                                    >
                                                    {sub.name}
                                                </a>
                                            );
                                        })}
                                    </div>
                                )}
                            </div>
                        );
                    })
                }
            </nav>

            <div class="p-4 border-t border-border">
                {
                    currentContext && (
                            <a href="/areas" class="block mb-4 px-3 py-2 bg-primary/5 rounded-lg border border-primary/10 hover:bg-primary/10 transition-colors">
                                <div class="text-xs text-primary font-semibold uppercase tracking-wider mb-1">
                                    Current Context
                                </div>
                                <div class="flex items-center text-sm font-medium text-text-main">
                                    <Layers class="w-4 h-4 mr-2 text-primary" />
                                    <span>{currentContextName}</span>
                                </div>
                            </a>
                    )
                }
                <a
                    href="/settings"
                    class="flex items-center px-3 py-2 text-sm font-medium rounded-lg text-text-muted hover:bg-surface-hover hover:text-text-main transition-colors"
                >
                    <Settings class="mr-3 h-5 w-5" />
                    Settings
                </a>
            </div>
        </aside>
        ) }

        <!-- Main Content -->
        <main class="flex-1 overflow-y-auto bg-background relative">
            <div class="max-w-5xl mx-auto p-4 md:p-8 pb-[calc(env(safe-area-inset-bottom)+6rem)] md:pb-8">
                <slot />
            </div>
        </main>

        <!-- Mobile Bottom Nav -->
        <nav
            class="md:hidden fixed bottom-0 left-0 right-0 bg-surface border-t border-border flex justify-around p-2 pb-[env(safe-area-inset-bottom)] z-50"
            aria-hidden="true"
        >
            {
                navItems
                    .filter((i) => !["Context", "Settings"].includes(i.name))
                    .slice(0, 5)
                    .map((item) => {
                        const active = isActive(item.href);
                        return (
                                <a
                                    href={`${item.href}?from=mobile`}
                                    aria-current={active ? 'page' : undefined}
                                    class:list={[
                                        "flex flex-col items-center justify-center p-2 rounded-lg transition-all duration-200 w-full",
                                        active
                                            ? "text-primary"
                                            : "text-text-muted hover:text-text-main",
                                    ]}
                            >
                                <item.icon class="h-5 w-5 mb-1" />
                                <span class="text-[10px] font-medium">
                                    {item.name === 'Inbox' ? 'Inbx' : item.name === 'Projects' ? 'Proj' : item.name === 'Actions' ? 'Acts' : item.name === 'Areas' ? 'Areas' : item.name === 'Reviews' ? 'Rev' : item.name}
                                </span>
                            </a>
                        );
                    })
            }
        </nav>
    </div>
</Layout>

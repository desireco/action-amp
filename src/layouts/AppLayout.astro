---
import Layout from "./Layout.astro";
import {
    Inbox,
    FolderKanban,
    LayoutGrid,
    CalendarCheck,
    Settings,
    Zap,
    Plus,
    ListChecks,
    Target,
    Layers,
    ChevronRight,
    Search,
} from "lucide-astro";
import { getCachedSettings } from "../lib/data/settings";
import { getCachedCollection } from "../lib/content-cache";
import Input from "../components/ui/Input.astro";

interface Props {
    title: string;
    currentPath?: string;
}

const { title, currentPath = Astro.url.pathname } = Astro.props;

// Fetch Context and Projects
const settings = await getCachedSettings();
const currentContext = settings.next_action_context;

let contextProjects: any[] = [];
if (currentContext) {
    const allProjects = await getCachedCollection("projects");
    contextProjects = allProjects
        .filter(
            (p) => p.data.area === currentContext && p.data.status === "active",
        )
        .sort((a, b) => a.data.name.localeCompare(b.data.name));
}

const navItems = [
    { name: "Capture", href: "/capture", icon: Plus },
    { name: "Next Action", href: "/next", icon: Target },
    { name: "Inbox", href: "/inbox", icon: Inbox },
    { name: "Triage", href: "/triage", icon: ListChecks },
    { name: "Search", href: "/search", icon: Search },
    {
        name: "Projects",
        href: "/projects",
        icon: FolderKanban,
        subitems: contextProjects.map((p) => {
            const cleanId = p.id.replace(/\/project\.toml$/, "");
            return {
                name: p.data.name,
                href: `/projects/${cleanId}`,
            };
        }),
    },
    { name: "Areas", href: "/areas", icon: LayoutGrid },
    { name: "Reviews", href: "/reviews", icon: CalendarCheck },
];

const isActive = (path: string) => {
    if (path === "/" && currentPath === "/") return true;
    if (path !== "/" && currentPath.startsWith(path)) return true;
    return false;
};
---

<Layout title={title}>
    <div
        class="flex flex-col md:flex-row h-screen overflow-hidden bg-background"
    >
        <!-- Mobile Header -->
        <header
            class="md:hidden flex items-center justify-between p-4 border-b border-border bg-surface"
        >
            <div class="flex items-center gap-2">
                <div
                    class="h-8 w-8 rounded-lg bg-primary/20 flex items-center justify-center text-primary"
                >
                    <Zap class="h-5 w-5" />
                </div>
                <h1 class="text-lg font-bold tracking-tight text-text-main">
                    Action Amp
                </h1>
            </div>
            <a href="/settings" class="text-text-muted hover:text-text-main">
                <Settings class="h-5 w-5" />
            </a>
        </header>

        <!-- Sidebar -->
        <aside
            class="w-64 border-r border-border bg-surface hidden md:flex flex-col"
        >
            <div class="p-6 flex items-center gap-3">
                <div
                    class="h-8 w-8 rounded-lg bg-primary/20 flex items-center justify-center text-primary"
                >
                    <Zap class="h-5 w-5" />
                </div>
                <h1 class="text-xl font-bold tracking-tight text-text-main">
                    Action Amp
                </h1>
            </div>

            <div class="px-4 mb-2">
                <div class="relative">
                    <Input
                        type="text"
                        id="quick-capture"
                        placeholder="Quick Capture..."
                        class="bg-surface-hover"
                    />
                    <div
                        class="absolute right-3 top-2.5 text-xs text-text-muted pointer-events-none opacity-50"
                    >
                        ‚èé
                    </div>
                </div>
            </div>

            <nav class="flex-1 px-4 space-y-1 mt-2 overflow-y-auto">
                {
                    navItems.map((item) => {
                        const active = isActive(item.href);
                        const hasSubitems =
                            item.subitems && item.subitems.length > 0;

                        return (
                            <div>
                                <a
                                    href={item.href}
                                    rel="prefetch"
                                    class:list={[
                                        "flex items-center px-3 py-2.5 text-sm font-medium rounded-lg transition-all duration-200 group",
                                        active
                                            ? "bg-primary/10 text-primary"
                                            : "text-text-muted hover:bg-surface-hover hover:text-text-main",
                                    ]}
                                >
                                    <item.icon
                                        class:list={[
                                            "mr-3 h-5 w-5 transition-colors",
                                            active
                                                ? "text-primary"
                                                : "text-text-muted group-hover:text-text-main",
                                        ]}
                                    />
                                    <span class="flex-1">{item.name}</span>
                                    {hasSubitems && (
                                        <span class="text-xs bg-primary/10 text-primary px-2 py-0.5 rounded-full">
                                            {item.subitems.length}
                                        </span>
                                    )}
                                </a>

                                {hasSubitems && (
                                    <div class="ml-9 mt-1 space-y-1 border-l border-border pl-2">
                                        {item.subitems.map((sub) => {
                                            const subActive =
                                                currentPath === sub.href ||
                                                currentPath.startsWith(
                                                    sub.href + "/",
                                                );
                                            return (
                                                <a
                                                    href={sub.href}
                                                    rel="prefetch"
                                                    class:list={[
                                                        "block px-3 py-1.5 text-sm rounded-md transition-colors truncate",
                                                        subActive
                                                            ? "text-primary bg-primary/5 font-medium"
                                                            : "text-text-muted hover:text-text-main hover:bg-surface-hover",
                                                    ]}
                                                >
                                                    {sub.name}
                                                </a>
                                            );
                                        })}
                                    </div>
                                )}
                            </div>
                        );
                    })
                }
            </nav>

            <div class="p-4 border-t border-border">
                {
                    currentContext && (
                        <div class="mb-4 px-3 py-2 bg-primary/5 rounded-lg border border-primary/10">
                            <div class="text-xs text-primary font-semibold uppercase tracking-wider mb-1">
                                Current Context
                            </div>
                            <div class="flex items-center text-sm font-medium text-text-main">
                                <Layers class="w-4 h-4 mr-2 text-primary" />
                                <span class="capitalize">{currentContext}</span>
                            </div>
                        </div>
                    )
                }
                <a
                    href="/settings"
                    class="flex items-center px-3 py-2 text-sm font-medium rounded-lg text-text-muted hover:bg-surface-hover hover:text-text-main transition-colors"
                >
                    <Settings class="mr-3 h-5 w-5" />
                    Settings
                </a>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="flex-1 overflow-y-auto bg-background relative">
            <div class="max-w-5xl mx-auto p-4 md:p-8 pb-24 md:pb-8">
                <slot />
            </div>
        </main>

        <!-- Mobile Bottom Nav -->
        <nav
            class="md:hidden fixed bottom-0 left-0 right-0 bg-surface border-t border-border flex justify-around p-2 z-50 pb-6"
        >
            {
                navItems
                    .filter((i) => !["Context", "Settings"].includes(i.name))
                    .slice(0, 5)
                    .map((item) => {
                        const active = isActive(item.href);
                        return (
                            <a
                                href={item.href}
                                rel="prefetch"
                                class:list={[
                                    "flex flex-col items-center justify-center p-2 rounded-lg transition-all duration-200 w-full",
                                    active
                                        ? "text-primary"
                                        : "text-text-muted hover:text-text-main",
                                ]}
                            >
                                <item.icon class="h-5 w-5 mb-1" />
                                <span class="text-[10px] font-medium">
                                    {item.name}
                                </span>
                            </a>
                        );
                    })
            }
        </nav>
    </div>
    <script>
        const input = document.getElementById(
            "quick-capture",
        ) as HTMLInputElement;

        input?.addEventListener("keydown", async (e) => {
            if (e.key === "Enter") {
                const title = input.value.trim();
                if (!title) return;

                try {
                    input.disabled = true;
                    const res = await fetch("/api/inbox", {
                        method: "POST",
                        headers: { "Content-Type": "application/json" },
                        body: JSON.stringify({ title }),
                    });

                    if (res.ok) {
                        input.value = "";
                        // If we are on the inbox page, reload to show the new item
                        if (window.location.pathname === "/inbox") {
                            window.location.reload();
                        }
                    } else {
                        console.error("Failed to capture");
                        alert("Failed to capture item");
                    }
                } catch (err) {
                    console.error(err);
                    alert("Error capturing item");
                } finally {
                    input.disabled = false;
                    input.focus();
                }
            }
        });
    </script>
</Layout>

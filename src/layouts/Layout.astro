---
import "../styles/global.css";
import { ClientRouter } from "astro:transitions";

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
    <head>
        <meta charset="UTF-8" />
        <meta
            name="description"
            content="Action Amplifier - Personal Productivity System"
        />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
            rel="stylesheet"
        />
        <title>{title}</title>
        <ClientRouter />
    </head>
    <body
        class="antialiased bg-background text-text-main min-h-screen flex flex-col"
    >
        <div
            id="page-loader"
            class="fixed inset-0 z-50 hidden opacity-0 transition-opacity duration-300 bg-background/80 backdrop-blur-sm"
            transition:persist
        >
            <div
                class="flex h-full w-full flex-col items-center justify-center"
            >
                <div
                    class="h-12 w-12 rounded-full border-4 border-primary/30 border-t-primary animate-spin"
                >
                </div>
                <div
                    class="mt-4 text-sm font-medium text-text-muted animate-pulse"
                >
                    Loading...
                </div>
            </div>
        </div>

        <slot />

        <script>
            const loader = document.getElementById("page-loader");
            let timeout: ReturnType<typeof setTimeout>;

            document.addEventListener("astro:before-preparation", () => {
                // Show loader with a slight delay to avoid flicker on fast navigations
                timeout = setTimeout(() => {
                    loader?.classList.remove("hidden");
                    // Force a reflow to enable transition
                    void loader?.offsetWidth;
                    loader?.classList.remove("opacity-0");
                }, 200);
            });

            document.addEventListener("astro:page-load", () => {
                if (timeout) clearTimeout(timeout);
                loader?.classList.add("opacity-0");
                setTimeout(() => {
                    loader?.classList.add("hidden");
                }, 300);
            });
        </script>
        <script src="/scripts/toast-manager.ts"></script>
    </body>
</html>

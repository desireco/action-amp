#!/bin/bash
#
# Safe beads wrapper that enforces test verification
# Place this script in your PATH (or create an alias) to use instead of bd
#

set -e

# Find the real bd command
REAL_BD="$(which bd)"
if [ -z "$REAL_BD" ]; then
    echo "Error: bd command not found in PATH" >&2
    exit 1
fi

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m'

# Function to run test verification
verify_tests() {
    echo -e "${BLUE}üß™ Running test verification...${NC}"

    # Check if we're in a project with package.json
    if [ ! -f "package.json" ]; then
        echo -e "${YELLOW}‚ö†Ô∏è  Not in a Node.js project (no package.json), skipping tests${NC}"
        return 0
    fi

    # Check if test script exists in package.json
    if ! grep -q '"test"' package.json; then
        echo -e "${YELLOW}‚ö†Ô∏è  No test script found, skipping tests${NC}"
        return 0
    fi

    # Run unit tests
    echo -e "${YELLOW}Running unit tests...${NC}"
    if ! npm test >/dev/null 2>&1; then
        echo -e "${RED}‚ùå Unit tests failed!${NC}" >&2
        echo "" >&2
        echo "Cannot close task with failing tests." >&2
        echo "Please fix the issues and try again." >&2
        echo "Run 'npm test' to see which tests are failing." >&2
        exit 1
    fi
    echo -e "${GREEN}‚úÖ Unit tests passed${NC}"

    # Check for e2e tests
    if [ -d "tests" ] && npm run test:e2e --silent >/dev/null 2>&1; then
        echo -e "${YELLOW}Running e2e tests...${NC}"
        # Run with timeout to avoid hanging
        if timeout 60 npm run test:e2e >/dev/null 2>&1; then
            echo -e "${GREEN}‚úÖ E2E tests passed${NC}"
        else
            echo -e "${YELLOW}‚ö†Ô∏è  E2E tests timed out or failed (may need dev server)${NC}"
            echo "  Proceeding with unit test verification only..."
        fi
    fi

    echo -e "${GREEN}‚úÖ Test verification complete${NC}"
    echo ""
}

# Check if this is a command that requires test verification
if [ "$1" = "close" ]; then
    # These operations require tests to pass
    verify_tests
fi

# Execute the real bd command with all arguments
exec "$REAL_BD" "$@"